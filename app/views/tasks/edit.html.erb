<%= form_for(@task) do |t| %>
  <div class="form-group">
  <%= t.label :title %>
  <%= t.text_field :title %> <br />
  </div>

<div class="form-group">
  <%= t.label :details %>
  <%= t.text_field :details %> <br />
</div>

<div class="form-group">
    <%= t.label "Done" %>
    <%= t.check_box :completed %> <br />
</div>


  <%= t.submit %>
<% end %>
